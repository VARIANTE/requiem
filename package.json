{
  "name": "requiem",
  "version": "0.36.2",
  "description": "An experimental front-end JS framework.",
  "homepage": "http://VARIANTE.github.io/requiem",
  "license": "MIT",
  "main": "dist/requiem.js",
  "scripts": {
    "clean": "rimraf dist && rimraf lib",
    "clean:docs": "rimraf docs",
    "clean:play": "rimraf playground/public",
    "build": "npm run clean && npm run build:lib && npm run build:dev && npm run build:prod",
    "build:lib": "babel -D src/ --out-dir lib/",
    "build:dev": "NODE_ENV=development webpack --colors --profile --config ./webpack.config.babel.js",
    "build:prod": "NODE_ENV=production webpack --colors --profile --config ./webpack.config.babel.js",
    "build:docs": "jsdoc src -r -R README.md -c .docconfig",
    "build:play:templates": "jade -O \"{basedir:'playground/app/templates'}\" -P -o playground/public playground/app/templates/index.jade",
    "build:play:scripts": "webpack --colors --profile --config ./playground/webpack.config.babel.js",
    "serve:play": "webpack-dev-server --progress --inline --hot --config playground/webpack.config.babel.js --content-base playground/public --port 8080 --watch",
    "docs": "npm run clean:docs && npm run build:docs",
    "play": "npm run clean && npm run build:dev && npm run clean:play && npm run build:play:templates && npm run serve:play",
    "test": "npm run build"
  },
  "authors": [
    "Andrew Wei <andrew@variante.io>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/VARIANTE/requiem.git"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.5.2",
    "babel-loader": "^6.2.2",
    "babel-preset-es2015": "^6.5.0",
    "css-loader": "^0.23.1",
    "html-loader": "^0.4.0",
    "jade": "^1.11.0",
    "jsdoc": "^3.4.0",
    "requiem-styles": "^0.18.8",
    "rimraf": "^2.5.2",
    "sass-loader": "^3.1.2",
    "style-loader": "^0.13.0",
    "template-html-loader": "0.0.3",
    "webpack": "^1.12.13",
    "webpack-dev-server": "^1.14.1"
  },
  "files": [
    "dist",
    "lib"
  ],
  "engines": {
    "node": "5.6.0",
    "npm": "3.7.2"
  }
}
